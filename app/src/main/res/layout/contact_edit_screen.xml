<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.addressbook.thorrism.addressbook.ContactEditScreen">


    <ScrollView
        android:id="@+id/newContactScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/addContactLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_contact"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:layout_marginBottom="2dp"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"/>

            <EditText
                android:id="@+id/firstNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="@string/first_name"
                android:padding="5dp"
                android:textColor="#000"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/last_name"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"/>

            <EditText
                android:id="@+id/lastNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/last_name"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/address_input"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"/>

            <EditText
                android:id="@+id/addressNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/street_input"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/cityNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/city_input"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/stateNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/state_input"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/zipcodeEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="phone|number"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:clickable="true"
                android:hint="@string/zipcode_input"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/number_input"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"/>

            <EditText
                android:id="@+id/numberEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/number_input"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/email_input"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"/>

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/email_input"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"/>

            <TextView
                android:id="@+id/extraTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="2dp"
                android:textAllCaps="true"
                android:textColor="#00BFFF"
                android:textSize="10sp"
                android:visibility="gone"/>

            <View
                android:id="@+id/extraLineView"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#00BFFF"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/extraDataEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/extra_field_data"
                android:clickable="true"
                android:textCursorDrawable="@drawable/blackcursor"
                android:background="@drawable/edit_text_form"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/extrasLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/edit_text_form">

                <ImageView
                    android:id="@+id/add_extra_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add_field"
                    android:layout_gravity="center"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_add_field"/>

                <TextView
                    android:id="@+id/add_extra_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_field"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contactButtonLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="#777"
        android:padding="5dp"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/addContactBtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="fill_parent"
            android:text="@string/save_contact"
            style="?android:attr/buttonBarButtonStyle"
            android:background="#BBB"
            android:scaleType="fitCenter"
            android:textColor="#000"/>

        <Button
            android:id="@+id/cancelContactBtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="fill_parent"
            android:text="@string/cancel_contact"
            style="?android:attr/buttonBarButtonStyle"
            android:background="#BBB"
            android:scaleType="fitCenter"
            android:textColor="#000"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/addContactsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLargeInverse"
        android:visibility="gone"/>

</RelativeLayout>
