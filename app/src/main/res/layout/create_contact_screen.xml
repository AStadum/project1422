<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.addressbook.thorrism.addressbook.CreateContactScreen">


    <ScrollView
        android:id="@+id/newContactScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/addContactLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_contact"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/firstNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="@string/first_name"
                android:padding="5dp"
                android:textColor="#000"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/lastNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/last_name"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/addressNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/address_input"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/cityNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/city_input"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/stateNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/state_input"
                android:background="@drawable/edit_text_form"/>

            <EditText
                android:id="@+id/zipcodeEdit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000"
                android:hint="@string/zipcode_input"
                android:layout_marginBottom="75dp"
                android:background="@drawable/edit_text_form"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contactButtonLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="#555"
        android:padding="5dp"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/addContactBtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="fill_parent"
            android:text="@string/save_contact"
            style="?android:attr/buttonBarButtonStyle"
            android:background="#BBB"
            android:scaleType="fitCenter"
            android:textColor="#000"/>

        <Button
            android:id="@+id/cancelContactBtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="fill_parent"
            android:text="@string/cancel_contact"
            style="?android:attr/buttonBarButtonStyle"
            android:background="#BBB"
            android:scaleType="fitCenter"
            android:textColor="#000"/>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addContactsSpinner"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLargeInverse"
        android:visibility="gone"/>

</RelativeLayout>
