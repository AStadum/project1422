<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/editContactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/editContactIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/editContactView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingBottom="12dp"
            android:textSize="20sp"
            android:text="@string/edit_contact"
            />


    </LinearLayout>

    <View
        android:id="@+id/optionSeparator"
        android:layout_below="@id/editContactLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"/>

    <LinearLayout
        android:id="@+id/deleteContactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionSeparator"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/removeContactIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_list_remove"/>

        <TextView
            android:id="@+id/deleteContactView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:textSize="20sp"
            android:text="@string/delete_contact"
            />
    </LinearLayout>



</RelativeLayout>